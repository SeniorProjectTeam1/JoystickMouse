[Unit]
Description=Pico Joystick Mouse (UART -> uinput)
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /opt/pico_mouse/pico_mouse.py
Restart=always
RestartSec=1
User=root
WorkingDirectory=/opt/pico_mouse

# optional: log to journal only (default)
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
